# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用配置
DEBUG=false
HOST=0.0.0.0
PORT=8080

# 通义千问API密钥 (必须配置)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 模型配置
QWEN_MODEL=qwen-plus
RAG_ENGINE=qwen

# RAG配置
MAX_CONTEXT_LENGTH=4000
TOP_K_DOCUMENTS=5

# 知识库配置
KNOWLEDGE_SOURCE=json
KNOWLEDGE_PATH=data/knowledge_base.json

# 缓存配置 (可选)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# 数据库配置 (可选)
DATABASE_URL=sqlite:///./mediAi.db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log